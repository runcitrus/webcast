{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": ["node_modules/@types", "src/types"],
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist/"]
}
